import json
import json

def readJSON(table_name):
    data = {
        "owner" : "Anchal",
        "costCenter" : "1234567890",
        "departmentID" : "dept-12345",
        "resourceOwner" : "AnchalAgrahari",
        "projectName" : "awsResourceTagger",
        "githubLink" : "https://github.com/AnchalAgrahari/project-s3tagger/tree/s3-spellcaster"
    }
    with open (table_name + ".json","w") as f :
        json.dump(data, f, indent = 4)
    print(f"Data is written to {table_name}.json")

if __name__ == '__main__':
    try:
        table_name = 'ddbTable'
        readJSON(table_name)
    except Exception as e:
        print(f"An error occured while adding tags in {table_name} ")


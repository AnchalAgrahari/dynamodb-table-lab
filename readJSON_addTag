import json

def readJSON(filename):
    data = {
    "owner" : "Anchal",
    "costCenter" : "1234567890",
    "departmentID" : "dept-12345",
    "resourceOwner" : "AnchalAgrahari",
    "projectName" : "awsResourceTagger",
    "githubLink" : "https://github.com/AnchalAgrahari/project-s3tagger/tree/s3-spellcaster"
}
    with open (filename + ".json","w") as f :
        json.dump(data, f, indent = 4)
    print(f"Data is written to {filename}.json")

if __name__ == '__main__':
    try:
        filename = input("Enter the file name: ")
        readJSON(filename)
    except Exception as e :
        print("An error occured while finding file or dynamoDB Table",e)

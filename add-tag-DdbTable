import boto3
import json
def tagresource_ddbtable(table_name):
    try:
        client = boto3.client('dynamodb')
        response = client.tag_resource(
            ResourceArn='arn:aws:dynamodb:us-west-2:697429983773:table/First-table',
            Tags=[
                {
                    'Key': 'owner', 
                    'Value': 'Anchal',
                    'Key':  'Name',
                    'Value':  'AnchalAgrahari'
                },
            ]
        )
        print("The tag added successfully >3")
    except Exception as e:
        print("An Exception occured whilt addind tag in DDB Table",e)


if __name__ == '__main__':
    try:
        table_name = input (" Enter the tabe name: ").strip()
        tagresource_ddbtable(table_name)
    except Exception as e:
        print("AN exception occured while getting the table",e)

import boto3
import json
def tagresource_ddbtable(table_name):
    try:
        client = boto3.client('dynamodb')
        response = client.tag_resource(
            ResourceArn='arn:aws:dynamodb:us-west-2:697429983773:table/dbTable',
            Tags=[
                {
                    'Key': 'Owner',
                    'Value': 'Anchal'
                },
                {
                    'Key':  'Name',
                    'Value':  'AnchalAgrahari'
                },
                {
                    'Key': 'costCenter',
                    'Value': '1234567890'
                }
            ]
        )
        print(f"The tag added successfully in {table_name} >3")
    except Exception as e:
        print("An Exception occured while addind tag in DDB Table",e)


if __name__ == '__main__':
    try:
        table_name = input (" Enter the tabe name: ").strip()
        tagresource_ddbtable(table_name)
    except Exception as e:
        print("AN exception occured while getting the table",e)
